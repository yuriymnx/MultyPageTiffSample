<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        xmlns:behavior="clr-namespace:WpfApp4.Behavior"
        d:DataContext="{d:DesignInstance Type=local:TiffViewerViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: пагинация + масштаб -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="5">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="←" Command="{Binding PrevPageCommand}"/>
                <TextBox Text="{Binding DisplayCurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="40" />
                <TextBlock Text="/" Margin="2,0"/>
                <TextBlock Text="{Binding TotalPages}"/>
                <Button Content="→" Command="{Binding NextPageCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10,0,0,0">
                <Button Content="-" Width="28" Command="{Binding ZoomOutCommand}"/>
                <Button Content="+" Width="28" Margin="4,0,0,0" Command="{Binding ZoomInCommand}"/>
                <Button Content="Reset" Margin="8,0,0,0" Command="{Binding ResetZoomCommand}"/>
                <Button Content="По ширине" Margin="8,0,0,0" Command="{Binding FitToWidthCommand}" CommandParameter="{Binding ElementName=PagesList, Path=ActualWidth}"/>
                <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="{Binding Zoom, StringFormat={}{0:P0}}"/>
            </StackPanel>
        </DockPanel>

        <!-- Список страниц -->
        <ListBox x:Name="PagesList" Grid.Row="1"
             ItemsSource="{Binding Pages}"
             VirtualizingStackPanel.IsVirtualizing="True"
             VirtualizingStackPanel.VirtualizationMode="Recycling"
             ScrollViewer.CanContentScroll="True">
            <i:Interaction.Behaviors>
                <behavior:VirtualizingScrollPaginationBehavior/>
                <behavior:SlowMouseWheelScrollBehavior ScrollFactor="0.0099"/>
                <behavior:ScrollToIndexBehavior Index="{Binding CurrentPage}"/>
            </i:Interaction.Behaviors>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" HorizontalAlignment="Stretch">
                        <Image Source="{Binding Image}"
                               Stretch="None"
                               HorizontalAlignment="Center">
                            <Image.LayoutTransform>
                                <ScaleTransform
                                    ScaleX="{Binding DataContext.Zoom, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    ScaleY="{Binding DataContext.Zoom, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                            </Image.LayoutTransform>
                        </Image>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
